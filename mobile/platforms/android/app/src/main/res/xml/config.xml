<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Teamcd
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash density="land-hdpi" src="res/screen/android/wh-hdpi-640-480.png" />
    <splash density="land-ldpi" src="res/screen/android/wh-ldpi-426-320.png" />
    <splash density="land-mdpi" src="res/screen/android/wh-mdpi-470-320.png" />
    <splash density="land-xhdpi" src="res/screen/android/wh-xhdpi-960-720.png" />
    <splash density="port-hdpi" src="res/screen/android/wh-hdpi-480-640.png" />
    <splash density="port-ldpi" src="res/screen/android/wh-ldpi-320-426.png" />
    <splash density="port-mdpi" src="res/screen/android/wh-mdpi-320-470.png" />
    <splash density="port-xhdpi" src="res/screen/android/wh-xhdpi-720-960.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="SplashScreenSpinnerColor" value="white" />
</widget>
